#!/bin/sh

# Activate commit message pattern validation
ENABLE_PATTERN=false

# Insert your JIRA key below, like this "KEY1 KEY2".
PROJECT_JIRA_KEYS="EX"
COMMIT_MSG_FILE=$1
COMMIT_MSG=$(cat $1)

# Replace space with | to create the regex pattern
KEYS=$(echo "$PROJECT_JIRA_KEYS" | tr ' ' '|')

# REGEX to ensure that will have one or two JIRA tasks ID in the comment.
PATTERN="^\[($KEYS)-[0-9]{1,6}\](\[($KEYS)-[0-9]{1,6}\])? (feat|fix|docs|style|refactor|perf|test|ci|chore|revert): .+$"

if [ "$ENABLE_PATTERN" = true ]; then
  if ! echo "$COMMIT_MSG" | grep -Eq "$PATTERN"; then
      echo "***************************************************************************************"
      echo "‚ùå‚ùå‚ùåERROR: Your commit message doesn't match with our pattern‚ùå‚ùå‚ùå"
      echo "======================================================================================="
      echo "üí°HINT: Commit types ['feat','fix','docs','style','refactor','perf','test','ci','chore','revert']"
      echo "üí°HINT: You can include one or two Jira tasks"
      echo "üí°HINT: Valid commit message example_1: [$KEYS-123] feat: Implements something"
      echo "üí°HINT: Valid commit message example_2: [$KEYS-123][$KEYS-321] fix: Solving something"
      echo "======================================================================================="
      echo "üëâ Any question about conventional commit, visit:"
      echo "üëâ https://www.freecodecamp.org/news/how-to-write-better-git-commit-messages/"
      echo "***************************************************************************************"
      exit 1
  fi
else
    echo "=========================================================="
    echo "||‚ö†Ô∏è ADVISE: Skipping commit message pattern validation‚ö†Ô∏è ||"
    echo "=========================================================="
fi